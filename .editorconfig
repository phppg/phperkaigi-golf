# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
end_of_line = true
insert_final_newline = true
trim_trailing_whitespace = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8

[{*.html,*.html.twig}]
indent_style = tab
indent_size = 4

[{*.php,.php_cs.dist}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{*.xml,*.xml.dist}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
